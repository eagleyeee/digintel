#!/usr/bin/env python3

import os
import socket
import subprocess
import requests
import re
from datetime import datetime

OUTFILE = f"digintel_report_{int(datetime.now().timestamp())}.txt"

BOLD = '\033[1m'
NORMAL = '\033[0m'
GREEN = '\033[92m'
BLUE = '\033[94m'
RED = '\033[91m'
CYAN = '\033[96m'

def log_and_print(msg):
    print(msg)
    with open(OUTFILE, 'a') as f:
        f.write(msg + '\n')

def banner():
    print(BLUE + r"""

