BOLD = '\033[1m'
NORMAL = '\033[0m'
GREEN = '\033[92m'
BLUE = '\033[94m'
RED = '\033[91m'
CYAN = '\033[96m'

def log_and_print(msg):
    print(msg)
    with open(OUTFILE, 'a') as f:
        f.write(msg + '\n')

